namespace SiliconStudio.Paradox.Rendering.Materials
{
    /// <summary>
    /// Interface for a microfacet Geometric Shadowing function
    /// </summary>
    class IMaterialSpecularMicrofacetVisibilityFunction : MaterialPixelShadingStream, BRDFMicrofacet
    {
        float Compute()
        {
            return VisibilityImplicit(streams.NdotL, streams.NdotV);
        }
    };
}